<% content_for :jumbotron do %>
<div class="round-and-shaded signup clearfix">

  <h3>Resend confirmation instructions</h3>

  <p class="muted centered">Use this form to request your confirmation instructions again</p>

  <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.submit "Resend confirmation instructions", :class => "btn btn-info" %>
  </div>
  <% end %>
  <% end %>

  <center>
    <%= render "devise/shared/links" %>
  </center>

</div>
