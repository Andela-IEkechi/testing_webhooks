<% content_for :jumbotron do %>
  <div class="round-and-shaded signup clearfix">
    <center>
      <h2>Accept Your Invitation</h2>
      <p class="muted">Create your free account:</p>
    </center>

    <%= simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.hidden_field :invitation_token %>
      <div class="form-inputs">
        <%= f.input :full_name, required: true, autofocus: true, input_html: {tabindex: 1} %>
        <%= f.input :password, required: true, input_html: {tabindex: 2} %>
        <%= f.input :password_confirmation, required: true, input_html: {tabindex: 3} %>
      </div>

      <div class="form-actions">
        <%= f.input :terms, label: "I have read and agree with the Terms of Use.", required: true, input_html: {tabindex: 4}, :wrapper => :inline_checkbox %>
        <%= f.submit "Sign up", :class => "btn btn-primary btn-large", tabindex: 5 %>
      </div>
    <% end %>

<% end %>

