<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class=> 'form-horizontal', :method => :put }) do |f| %>
  <div class="form-inputs">
    <%= f.simple_fields_for :preferences, resource.preferences do |prefs| %>
      <%= prefs.input :page_size, :collection => [5,10,15,20].map{|x| [x,x]}, :include_blank => false %>
      <%= prefs.input :collapse_long_tickets, :as => :boolean, :hint => 'only show the 5 most recent comments' %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update", :class => "btn"  %>
    <%= hidden_field_tag :current_tab, 'preferences' %>
    <%= link_to 'Cancel', root_path(), :class => 'btn' %>
  </div>
<% end %>
