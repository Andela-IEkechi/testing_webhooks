<h3>Manage Profile</h3>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class=> 'form-horizontal', :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs pull-left">
    <%= f.input :full_name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
  </div>

  <%= gravatar_for @current_user, 200, 'pull-left img-polaroid' %>

  <div class="clearfix"></div>

  <div class="form-actions">
    <%= f.submit "Update", :class => "btn"  %>
    <%= link_to 'Cancel', root_path(), :class => 'btn' %>
  </div>
<% end %>

<h3>Cancel your account</h3>

<div>
  If you cancel your account, all projects owned by you will be
  permanently deleted.
</div>

<div class="form-actions">
  <%= link_to "I know what I'm doing, cancel my account", registration_path(:user), :class => 'btn btn-danger', :confirm => 'You are about to cancel your account. Proceed?', :method => :delete %>
</div>
