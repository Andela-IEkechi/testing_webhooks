<ul class="nav nav-stacked">
  <% if action_name != 'index' %>
    <li>
      <%= link_to project_path(@feature.project) do %>
      <span class="navico"><i class="icon-arrow-left navico"></i></span>back to project
      <% end %>
    </li>
  <% end %>
  <% if action_name == 'show' %>

    <% if (@feature.project.participants.include? current_user) %>
    <li>
      <%= link_to edit_project_feature_path(@feature.project,@feature) do %>
      <span class="navico"><i class="icon-edit navico"></i></span>edit this feature
      <% end %>
    </li>
    <li>
      <%= link_to project_feature_path(@feature.project,@feature), :method => :delete, :data => {:confirm => "Are you sure you want to delete this feature?"} do %>
      <span class="navico"><i class="icon-trash navico"></i></span>remove this feature
      <% end %>
    </li>
    <% end %>

    <li>
      <%= link_to new_project_ticket_path(@project, :feature_id => @feature) do %>
      <span class="navico"><i class="icon-plus navico"></i></span>add a new ticket
      <% end %>
    </li>
  <% end %>
  <% if action_name == 'index' %>
    <li>
      <%= link_to new_project_feature_path(@feature.project) do %>
      <span class="navico"><i class="icon-plus navico"></i></span>add a new feature
      <% end %>
    </li>
  <% end %>
</ul>

