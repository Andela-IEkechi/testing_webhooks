<table class="table table-bordered table-striped">
  <% features.each do |feature| %>
  <tr>
    <td><%= link_to feature.title, project_feature_path(feature.project, feature) %></td>
    <td class="count" title="tickets in this feature"><%= feature.tickets.count %></td>
  </tr>
  <% end %>
  <% if features.count == 0 %>
  <tr>
    <td>There are no features</td>
  </tr>
  <% end %>
</table>
