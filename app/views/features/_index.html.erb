<table class="table table-bordered table-striped">
  <caption>
    <h2>Features</h2>
  </caption>
  <tr>
    <th class="span1">#</th>
    <th>Title</th>
    <th class="span3">Progress</th>
    <th class="span1">Tickets</th>
  </tr>
  <% features.each do |feature| %>
  <tr>
    <td><%= feature.id %></td>
    <td><%= link_to feature.title, project_feature_path(feature.project, feature) %></td>
    <%
      closed=feature.closed_tickets.count
      total=feature.assigned_tickets.count
    %>
      <td>
        <div class="progress <%= 'progress-grey' if completion_state(feature) == 'grey' %>" title="<%= completion_message(feature) %>">
          <div class="bar bar-<%= completion_state(feature) %> " style="width: <%= completion_percentage(feature) %>%;"></div>
        </div>
      </td>
    <td class="span1 count" title="tickets in this feature"><span class="badge badge-info"><%= feature.assigned_tickets.count %></span></td>
  </tr>
  <% end %>
  <% if features.count == 0 %>
  <tr>
    <td colspan="3">There are no features</td>
  </tr>
  <% end %>
</table>
