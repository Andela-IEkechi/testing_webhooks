<h4><%= plan[:title] %></h4>
<ul>
  <li class="first">
    <div class="price-tag"><span class="price-value"><%= (plan[:price].to_i > 0) ? "$ #{plan[:price]}" : 'Free' %></span><span class="price-period">per month</span></div>
  </li>
  <li><strong><%= plan[:projects] %></strong>&nbsp;<%= 'Project'.pluralize(plan[:projects]) %></li>
  <li><strong><%= (plan[:users].to_i != 999) ? "#{plan[:users]}" : 'Unlimited' %></strong>&nbsp;<%= 'User'.pluralize(plan[:users]) %></li>
  <li><strong><%= plan[:storage_gb] %>GB</strong>&nbsp;Storage</li>
  <li class="last">
    <%= radio_button_tag 'Amount', plan[:price], @account.current_plan.upgrade_to? == plan.to_s, :disabled => !@account.can_downgrade?(plan), :id => "amount_#{plan}" %>
    <%= label_tag "amount_#{plan}", plan.better_than?(@account.current_plan) ? 'Upgrade' : 'Downgrade', :class => "bigger" %>
  </li>
</ul>