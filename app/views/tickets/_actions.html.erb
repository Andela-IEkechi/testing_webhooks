<ul class="nav nav-pills nav-stacked">
  <% if action_name != 'index' %>
    <li>
      <% if @ticket.ticketable %>
        <%= link_to "back to #{@ticket.ticketable_type.downcase}", parent_path(@ticket) %>
      <% else %>
        <%= link_to 'back to tickets', tickets_path %>
      <% end %>
    </li>
  <% end %>
  <% if action_name == 'show' %>
    <li>
      <%= link_to 'edit this ticket', edit_ticket_path(@ticket) %>
    </li>
    <li>
      <%= link_to 'remove this ticket', ticket_path(@ticket), :method => :delete %>
    </li>
  <% end %>
  <% if action_name != 'new' %>
    <li>
      <%= link_to 'add a new ticket', new_ticket_path %>
    </li>
  <% end %>
</ul>

