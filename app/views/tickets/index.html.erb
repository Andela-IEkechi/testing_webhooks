<table class="table table-bordered table-striped">
  <% @tickets.each do |ticket| %>
  <tr class="clickable" data-href="<%= ticket_path(ticket) %>">
    <td><%= ticket.title %></td>
  </tr>
  <% end %>
  <% if @tickets.count == 0 %>
  <tr>
    <td>There are no tickets</td>
  </tr>
  <% end %>
</table>

<%= content_for :actions do %>
  <%= link_to 'add a new ticket', new_ticket_path, :class => 'btn btn-primary' %>

<% end %>