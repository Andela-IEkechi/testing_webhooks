<%= yield :form_heading %>

<%= simple_nested_form_for(@ticket, :html => {:class=>'form-horizontal', :multipart => true}) do |f| %>
  <%= f.input :title, :input_html => {:class => 'span6'}%>
  <%= f.simple_fields_for :comments, @comment do |c_f| %>
    <%= render :partial => '/comments/form_fields', :locals => {:comment_form => c_f} %>
  <% end %>

  <%= f.input :project_id, :as => :hidden %>

  <div class="form-actions">
    <%= f.submit :class=>'btn', :value => 'Create Another', :class => 'repeat-action' %>
    <%= f.submit :class=>'btn' %>
    <%= f.submit :class=>'btn' %>
    <% if @feature %>
      <%= link_to 'cancel', project_feature_path(@ticket.project, @feature), :class => 'btn' %>
    <% elsif @sprint %>
      <%= link_to 'cancel', project_sprint_path(@ticket.project, @sprint), :class => 'btn' %>
    <% elsif !@ticket.new_record? %>
      <%= link_to 'cancel', ticket_path(@ticket), :class => 'btn' %>
    <% else%>
      <%= link_to 'cancel', project_path(@ticket.project), :class => 'btn' %>
    <% end %>
  </div>
<% end %>
