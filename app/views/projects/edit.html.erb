<% @current_tab = params[:current_tab]||'basic-info'%>
<h3>Edit <%= @project %></h3>
<div class="tabbable tabs-left">
	<ul class="nav nav-tabs">
		<li <% if @current_tab == 'basic-info' %>class="active" <%end%> >
			<a data-toggle="tab" href="#pane-basic-info">basic info</a>
		</li>
		<% unless @project.new_record? %>
		<li <% if @current_tab == 'states' %>class="active" <%end%> >
			<a data-toggle="tab" href="#pane-states">project states</a>
		</li>
		<% end %>
		<li  <% if @current_tab == 'access-control' %>class="active" <%end%> >
			<a data-toggle="tab" href="#pane-access-control">access control</a>
		</li>
		<li <% if @current_tab == 'API-keys' %>class="active" <%end%> >
			<a data-toggle="tab" href="#pane-api-keys">API keys</a>
		</li>
		<% if can_transfer_project?(@project) %>
			<li <% if @current_tab == 'transfer-project' %>class="active" <%end%> >
				<a data-toggle="tab" href="#pane-transfer-project">transfer project</a>
			</li>
		<% end %>
		<% if can_delete_project?(@project) %> 
			<li <% if @current_tab == 'delete-project' %>class="active" <%end%> >
				<a data-toggle="tab" href="#pane-delete-project">delete project</a>
			</li>
		<% end %>
	</ul>
	<div class="tab-content">
		
		<div id="pane-basic-info" class="tab-pane <% if @current_tab == 'basic-info' %>active<%end%> ">
			<p>
				<%= render :partial => 'info_form' %>
			</p>
		</div>
		<div id="pane-states" class="tab-pane <% if @current_tab == 'states' %>active<%end%>">
			<p>
				<%= render :partial => 'states_form' %>
			</p>
		</div>

		<div id="pane-access-control" class="tab-pane <% if @current_tab == 'access-control' %>active<%end%>">
			<p>
				<%= render :partial => '/accesses/edit' %>
			</p>
		</div>
		<div id="pane-api-keys" class="tab-pane <% if @current_tab == 'API-keys' %>active<%end%>">
			<p>
				<%= render :partial => '/projects/keys/edit' %>
			</p>
		</div>
		<div id="pane-transfer-project" class="tab-pane <% if @current_tab == 'transfer-project' %>active<%end%> ">
			<p>
				<%= render :partial => 'transfer_form' %>
			</p>
		</div>
		<div id="pane-delete-project" class="tab-pane <% if @current_tab == 'delete-project' %>active<%end%> ">
			<p>
				<%= render :partial => 'delete_form' %>
			</p>
		</div>
	</div>
</div>

