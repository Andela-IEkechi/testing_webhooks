<%= yield :form_heading %>

<%= simple_nested_form_for(@project, :html => {:class=>'form-horizontal'}) do |f| %>
  <%= f.input :title, :input_html => {:class => 'span4'} %>
  <% unless @project.new_record? %>
    <%= f.simple_fields_for :ticket_statuses do |ts_form| %>
      <%= ts_form.input :name%>
      <%= ts_form.select :nature, TicketStatus::NATURES%>
      <%= ts_form.link_to_remove "Remove this status", :class => 'btn btn-mini' %>
    <% end %>
    <%= f.input :ticket_statuses, :label => false do %>
      <%= f.link_to_add "Add a ticket status", :ticket_statuses, :class => 'btn btn-mini btn-success' %>
    <% end %>
  <% end %>

  <div class="form-actions">
    <%= f.submit :class=>'btn' %>
    <%= link_to 'cancel', project_path(@project), :class => 'btn' unless @project.new_record? %>
    <%= link_to 'cancel', projects_path(), :class => 'btn' if @project.new_record? %>
  </div>
<% end %>
