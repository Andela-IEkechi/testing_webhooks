<div class="project"
  data-active-tab="#<%= params[:tab] || 'boards_tab' %>"
>

  <h3><%= @project.name.present? ? @project.name : "Untitled" %></h3>

  <div class="row">
    <div class="col-sm-1">
      <!-- Nav tabs -->
      <ul class="nav nav-pills nav-stacked" role="tablist">
        <li class="nav-item text-xs-center">
          <a class="nav-link" data-toggle="tab" href="#boards_tab" role="tab" title="Boards"><%= fa_icon "table" %>boards</a>
        </li>
        <li class="nav-item text-xs-center">
          <a class="nav-link" data-toggle="tab" href="#tickets_tab" role="tab" title="Tickets"><%= fa_icon "check-square" %>tickets</a>
        </li>
        <li class="nav-item text-xs-center">
          <a class="nav-link" data-toggle="tab" href="#documents_tab" role="tab" title="Documents"><%= fa_icon "paperclip" %>documents</a>
        </li>
        <li class="nav-item text-xs-center">
          <a class="nav-link" data-toggle="tab" href="#settings_tab" role="tab" title="Settings"><%= fa_icon "gear" %>settings</a>
        </li>
      </ul>
      <% if @project.logo.present? %>
        <%= image_tag @project.logo_url(:thumb) %>
      <% end %>
    </div>
    <div class="col-sm-11">
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane" id="boards_tab" role="tabpanel"><%= render partial: '/projects/tabs/boards' %></div>
        <div class="tab-pane" id="tickets_tab" role="tabpanel"><%= render partial: '/projects/tabs/tickets' %></div>
        <div class="tab-pane" id="documents_tab" role="tabpanel"><%= render partial: '/projects/tabs/documents' %></div>
        <div class="tab-pane" id="settings_tab" role="tabpanel"><%= render partial: '/projects/tabs/settings' %></div>
      </div>
    </div>
  </div>
</div>
