<div class="row tickets"
  data-tickets-url="<%= project_tickets_url(@project, :format => 'json') %>"
  data-ticket-template="<%= CGI::escapeHTML render(partial: '/projects/tabs/tickets/ticket') %>"
>
  <div class="col-sm-12">
    <!-- Tab panes -->
    <div class="tab-content">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th colspan="3">
              <%= simple_form_for :search, url: "#search" do |f| %>
                <%= f.input_field :search, placeholder: "find tickets..." %>
              <% end %>
            </th>
            <th colspan="4" class="text-xs-right">
            <%= link_to new_project_ticket_path(@project), class: "btn btn-info" do %>
              <%= fa_icon "plus" %>
            <% end %>
            </th>
          </tr>
          <tr>
            <th>#</th>
            <th>name</th>
            <th>board</th>
            <th>assignee</th>
            <th>state</th>
            <th>cost</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="7">Loading tickets...</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
