<ul class="nav nav-pills nav-stacked">
  <% if action_name != 'index' %>
    <li>
      <%= link_to 'back to projects', projects_path %>
    </li>
  <% end %>
  <% if action_name == 'show' %>
    <li>
      <%= link_to 'edit this project', edit_project_path(@project) %>
    </li>
    <li>
      <%= link_to 'remove this project', project_path(@project), :method => :delete %>
    </li>
    <li>
      <%= link_to 'add a new feature', new_project_feature_path(@project) %>
    </li>
  <% end %>
  <% if action_name != 'new' %>
    <li>
      <%= link_to 'add a new project', new_project_path %>
    </li>
  <% end %>
</ul>


