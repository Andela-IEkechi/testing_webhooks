<!DOCTYPE html>
<html>
<head>
  <title><%= tab_heading %></title>
  <link rel="icon" href="/favicon.ico" type="image/ico" />
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap-tagsinput.min.js" %>
  <%= stylesheet_link_tag    "bootstrap-tagsinput", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrap">
    <div class="container-fluid">
      <div class="row-fluid">
        <%= render :partial => '/layouts/header' %>
      </div>
      <div class="row-fluid">
        <% if user_signed_in? %>
        <div class="span9">
          <%= render :partial => '/shared/flash_messages' %>
          <div class="well">
            <%= yield %>
          </div>
        </div>
        <div class="span3">
          <%= render :partial => '/shared/actions' %>
        </div>
        <% else %>
        <div class="span4">
          &nbsp;
        </div>
        <div class="span4 signinbox">
          <%= render :partial => '/shared/flash_messages' %>
          <%= yield %>
        </div>
        <% end %>
      </div>
    </div>

    <div id="push"></div>
  </div>
  <div id="footer">
    <div class="container-fluid">
      <%= render 'layouts/footer' %>
    </div>
  </div>
</body>
</html>
