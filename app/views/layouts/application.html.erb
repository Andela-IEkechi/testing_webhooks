<!DOCTYPE html>
<html>
<head>
  <title><%= flash[:title] || 'Conductor' %></title>
  <link rel="icon" href="/assets/favicon.ico" type="image/ico" />
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="row-fluid">
      <%= render :partial => '/layouts/header' %>
    </div>
    <div class="row-fluid">
      <% if user_signed_in? %>
      <div class="span9">
        <%= render :partial => '/shared/flash_messages' %>
        <%= yield %>
      </div>
      <div class="span3">
        <%= render :partial => 'actions' %>
      </div>
      <% else %>
      <div class="span4">
        &nbsp;
      </div>
      <div class="span4 signinbox">
        <%= render :partial => '/shared/flash_messages' %>
        <%= yield %>
      </div>
      <% end %>
    </div>
    <div class="row-fluid">
      <%= render :partial => '/layouts/footer' %>
    </div>
  </div>
</body>
</html>
