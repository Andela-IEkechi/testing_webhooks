<% if current_user %>

<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Conductor", root_path, :class=>'brand' %>
      <ul class="nav">
        <li>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Projects <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% current_user.participations.each do |project| %>
                <li><%= link_to project.title, project_path(project) %></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to 'new project', new_project_path %></li>
            </ul>
        </li>
        <li>
          <%= link_to "My Tickets", projects_path %>
        </li>
        <% if @project && !@project.new_record? %>
          <li class="heading"><%= link_to @project, project_path(@project) %></li>
        <% end %>
      </ul>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle login" data-toggle="dropdown">
            <%= current_user.email %>
            <%= gravatar_for @current_user %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu login">
            <li>
              <div class="navbar-profile">
                <div class="profile-img"> <%= gravatar_for @current_user, 96, 'img-polaroid' %> </div>
                <div class="profile-splurb">
                  <strong><%= current_user.full_name %></strong><br>
                  <small><%= current_user.email %></small><br>
                  <%= link_to 'Manage profile', edit_user_registration_path, class: 'btn btn-info' %>
                </div>
              </div>
            </li>
            <li class="last"><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'sign-out' %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>

<% else %>

<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Conductor", root_path, :class=>'brand' %>
    </div>
  </div>
</div>

<% end %>
